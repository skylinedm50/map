<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="Departamentos"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/departamento"
        android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:layout_width="match_parent"
        android:text="Municipios"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/municipio"
        android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:layout_width="match_parent"
        android:text="Aldeas"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/aldea"
        android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:layout_width="match_parent"
        android:text="Pagos"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pago"
        android:spinnerMode="dialog"></android.support.v7.widget.AppCompatSpinner>

    <CheckBox
        android:layout_width="match_parent"
        android:id="@+id/chk_mancomunidades"
        android:text="Mancomunidades"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/ButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="15dp"
            android:text="CANCELAR"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/buttonsearchex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="15dp"
            android:text="BUSCAR"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>