<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:id="@+id/departamento"
                android:spinnerMode="dialog"
                android:layout_weight="0.5"></android.support.v7.widget.AppCompatSpinner>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="40dp"
                android:background="#d5d5d5"
                android:layout_gravity="center"></LinearLayout>

            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/municipio"
                android:spinnerMode="dialog"
                android:layout_weight="0.5"></android.support.v7.widget.AppCompatSpinner>

        </LinearLayout>
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:id="@+id/aldea"
            android:spinnerMode="dialog"
            android:layout_height="50dp"></android.support.v7.widget.AppCompatSpinner>


        <com.pitt.library.fresh.FreshDownloadView
            android:id="@+id/descargar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            app:circular_color="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:circular_progress_color="@color/colorPrimary"
            android:background="#fff" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>