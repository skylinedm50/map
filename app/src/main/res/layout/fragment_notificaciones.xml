<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainer"
    tools:context=".view.notificacion.NotificacionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayoutData"
                android:padding="7dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:textColor="#c9a74e27"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/dwr_notificacion"
                    android:justificationMode="inter_word"
                    android:text="Nota: El texto de la notificación tiene un limite asegurese de no excederlo."
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/checkboxSendAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar a todos."/>
                <LinearLayout
                    android:id="@+id/linearLayoutFiler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Región"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinnerRegiones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Oficina"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinnerOficinas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Usuarios"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:id="@+id/checkboxSelectAll"
                        android:text="Seleccionar todo."
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewUsuarios"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Notificación"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:maxLines="8"
                            android:id="@+id/textInputEditTextNotificacion"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:minHeight="60dp"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/textViewCountLetters"
                        android:layout_width="match_parent"
                        android:text="0/150"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#747070"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>