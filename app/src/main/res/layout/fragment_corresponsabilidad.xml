<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.corresponsabilidad.CorresponsabilidadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ly_corr"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/llinfhogar">
                <TextView
                    android:id="@+id/textViewtitular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="TITULAR: ARACELY MACHADO RODRIGUEZ"/>
                <TextView
                    android:id="@+id/textViewhogar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="HOGAR NÂ°: 235932"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/linearLayoutinfosearch">
                <TextView
                    android:id="@+id/textViewMessageFind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Ingrese el numero de identidad para buscar las corresponsabilidades asociadas"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_personas_validar"
                android:visibility="gone"
                android:layout_marginTop="45dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>